<%= link_to 'New Task Type', new_task_type_path %>

<%= form_with(model: task_template) do |form| %>
  <% if task_template.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(task_template.errors.count, "error") %> prohibited this task_template from being saved:</h2>

      <ul>
        <% task_template.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :frequency, style: "display: block" %>
    <%= form.select :frequency, TaskTemplate.frequencies.keys %>
  </div>

  <div>
    <%= form.label :task_type_id, style: "display: block" %>
    <%= form.select :task_type_id, @task_type_options %>
  </div>

  <div>
    <%= form.label :singlable, style: "display: block" %>
    <%= form.check_box :singlable %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
