<%= link_to 'New Task Template', new_task_template_path %>

<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :user_id, value: current_user.id %>

  <div>
    <%= form.label :task_template_id, style: "display: block" %>
    <%= form.select :task_template_id, @task_template_options %>
  </div>

  <div>
    <%= form.label :priority, style: "display: block" %>
    <%= form.select :priority, Task.priorities.keys %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, Task.statuses.keys %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
